// Main content - enable scroll
.settings-content {
  --background: var(--ion-background-color);
  --padding-top: 0;
  --padding-bottom: 0;
  --overflow: auto;
}

// Container responsive - SOLO PARA MÓVIL
.settings-container {
  padding: 12px;
  padding-bottom: calc(12px + var(--ion-safe-area-bottom, 0));
  display: flex;
  flex-direction: column;
  gap: 10px;
  max-width: 100%;
  margin: 0 auto;
  min-height: 0;
  height: calc(100vh - 56px - var(--ion-safe-area-top, 0));
  overflow-y: auto;

  // Tablet portrait
  @media (min-width: 576px) {
    padding: 16px;
    padding-bottom: calc(16px + var(--ion-safe-area-bottom, 0));
    gap: 12px;
  }

  // Mobile Landscape
  @media (min-width: 568px) and (max-height: 500px) and (orientation: landscape) {
    flex-direction: column;
    gap: 8px;
    padding: 8px;
    padding-bottom: calc(8px + var(--ion-safe-area-bottom, 0));
    min-height: 0;
    height: calc(100vh - 48px);
    overflow-y: auto;
  }

  // Desktop: Ocultar layout móvil
  @media (min-width: 992px) {
    display: none;
  }
}

// Card base styles
.settings-card {
  border-radius: 12px;
  box-shadow: 0 2px 12px var(--card-shadow);
  margin: 0;
  background: var(--card-bg);
  border: 1px solid var(--card-border);

  // Card de módulos se expande
  &.card-modulos {
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    // En portrait, ocupar 90% de la altura visible menos header y padding
    min-height: calc((100vh - 56px - 24px - var(--ion-safe-area-top, 0)) * 0.9);

    // En landscape, ocupar toda la altura visible
    @media (min-width: 568px) and (max-height: 500px) and (orientation: landscape) {
      min-height: calc(100vh - 48px - 16px); // viewport - header - padding
    }

    ion-card-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      min-height: 0;
      overflow: hidden;
    }
  }

  @media (min-width: 576px) {
    border-radius: 16px;
  }

  // Desktop - stretch to fill height
  @media (min-width: 992px) {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  ion-card-header {
    padding: 12px 14px 8px;

    @media (min-width: 576px) {
      padding: 16px 18px 10px;
    }

    @media (min-width: 992px) {
      padding: 14px 16px 8px;
    }
  }

  ion-card-title {
    font-size: var(--font-title);
    font-weight: 700;
    color: var(--ion-text-color);
    display: flex;
    align-items: center;
    gap: 8px;

    @media (min-width: 576px) {
      font-size: var(--font-title);
    }

    @media (min-width: 992px) {
      font-size: var(--font-title);
    }

    ion-icon {
      font-size: var(--icon-lg);

      @media (min-width: 576px) {
        font-size: var(--icon-lg);
      }

      @media (min-width: 992px) {
        font-size: var(--icon-md);
      }
    }
  }

  ion-card-content {
    padding: 8px 14px 14px;

    @media (min-width: 576px) {
      padding: 10px 18px 18px;
    }

    @media (min-width: 992px) {
      padding: 8px 16px 16px;
      flex: 1;
      display: flex;
      flex-direction: column;
    }
  }
}

// ==========================================
// MODULES GRID
// ==========================================
.modules-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 10px;

  // Small mobile portrait
  @media (max-width: 359px) {
    grid-template-columns: repeat(2, 1fr);
  }

  // Mobile landscape - single row
  @media (min-width: 568px) and (max-height: 500px) and (orientation: landscape) {
    grid-template-columns: repeat(5, 1fr);
    gap: 8px;
  }

  // Tablet
  @media (min-width: 576px) and (orientation: portrait) {
    grid-template-columns: repeat(5, 1fr);
    gap: 12px;
  }

  // Desktop - single row, all visible
  @media (min-width: 992px) {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    gap: 10px;
    justify-content: flex-start;
  }
}

.module-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10px 6px;
  border-radius: 10px;
  background: var(--module-item-bg);
  border: 1px solid var(--module-item-border);
  box-shadow: 0 2px 4px var(--module-item-shadow);
  cursor: pointer;
  transition: transform 0.2s, box-shadow 0.2s;
  min-height: 75px;
  text-decoration: none; // Para elementos <a>
  color: inherit;

  // Mobile landscape - compact
  @media (min-width: 568px) and (max-height: 500px) and (orientation: landscape) {
    padding: 8px 4px;
    min-height: 65px;
    border-radius: 8px;
  }

  @media (min-width: 576px) {
    padding: 12px 8px;
    min-height: 85px;
    border-radius: 12px;
  }

  // Desktop - compact width
  @media (min-width: 992px) {
    min-width: 70px;
    width: 70px;
    padding: 10px 4px;
    min-height: 80px;
  }

  &:hover {
    transform: translateY(-2px);
    background: var(--module-item-hover-bg);
    box-shadow: 0 4px 12px var(--module-item-shadow);
  }

  &:active {
    transform: scale(0.97);
  }

  &.unavailable {
    opacity: 0.6;
    cursor: default;

    &:hover {
      transform: none;
      box-shadow: 0 2px 4px var(--module-item-shadow);
    }

    &:active {
      transform: none;
    }
  }

  span {
    font-size: var(--font-caption);
    font-weight: 600;
    color: var(--module-item-text);
    text-align: center;
    line-height: 1.2;
    margin-top: 6px;

    @media (min-width: 568px) and (max-height: 500px) and (orientation: landscape) {
      font-size: var(--font-micro);
      margin-top: 4px;
    }

    @media (min-width: 576px) {
      font-size: var(--font-body);
    }

    @media (min-width: 992px) {
      font-size: var(--font-micro);
      margin-top: 4px;
    }
  }
}

.module-icon {
  width: 36px;
  height: 36px;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;

  @media (min-width: 568px) and (max-height: 500px) and (orientation: landscape) {
    width: 32px;
    height: 32px;
    border-radius: 6px;
  }

  @media (min-width: 576px) {
    width: 42px;
    height: 42px;
    border-radius: 10px;
  }

  @media (min-width: 992px) {
    width: 36px;
    height: 36px;
    border-radius: 8px;
  }

  ion-icon {
    font-size: var(--icon-md);
    color: white;

    @media (min-width: 568px) and (max-height: 500px) and (orientation: landscape) {
      font-size: var(--icon-sm);
    }

    @media (min-width: 576px) {
      font-size: var(--icon-lg);
    }

    @media (min-width: 992px) {
      font-size: var(--icon-md);
    }
  }
}

// Icon backgrounds
.primary-bg { background: linear-gradient(135deg, var(--ion-color-primary), var(--ion-color-primary-tint)); }
.secondary-bg { background: linear-gradient(135deg, var(--ion-color-secondary), var(--ion-color-secondary-tint)); }
.tertiary-bg { background: linear-gradient(135deg, var(--ion-color-tertiary), var(--ion-color-tertiary-tint)); }
.success-bg { background: linear-gradient(135deg, var(--ion-color-success), var(--ion-color-success-tint)); }
.warning-bg { background: linear-gradient(135deg, var(--ion-color-warning), var(--ion-color-warning-tint)); }
.danger-bg { background: linear-gradient(135deg, var(--ion-color-danger), var(--ion-color-danger-tint)); }

// ==========================================
// MOBILE MODULES SEGMENT (Ionic Component)
// ==========================================
.modules-segment-container {
  padding: 0 !important;
}

.modules-segment {
  --background: transparent;
  margin-bottom: 8px;
  background: var(--item-bg);
  border-radius: 10px;
  padding: 4px;

  ion-segment-button {
    --indicator-color: var(--ion-color-primary);
    --indicator-box-shadow: none;
    --color: var(--item-text-secondary);
    --color-checked: var(--ion-color-primary);
    --background-checked: var(--card-bg);
    --padding-top: 8px;
    --padding-bottom: 6px;
    --padding-start: 8px;
    --padding-end: 8px;
    --border-radius: 8px;
    min-width: 60px;
    font-size: var(--font-caption);
    text-transform: none;
    transition: all 0.2s ease;

    ion-icon {
      font-size: var(--icon-md);
      margin-bottom: 3px;
      margin-right: 0;
    }

    ion-label {
      font-size: var(--font-micro);
      font-weight: 600;
    }
  }

  // Landscape - layout horizontal (ícono izquierda, texto derecha)
  @media (min-width: 568px) and (max-height: 500px) and (orientation: landscape) {
    margin-bottom: 4px;
    padding: 2px;

    ion-segment-button {
      --padding-top: 2px;
      --padding-bottom: 2px;
      --padding-start: 6px;
      --padding-end: 6px;
      --border-radius: 6px;
      min-width: auto;
      min-height: 28px;

      // Altura compacta en el contenedor interno
      &::part(native) {
        min-height: 28px;
        padding: 2px 6px;
      }

      // Ícono compacto
      ion-icon {
        font-size: var(--icon-sm);
        margin: 0 4px 0 0;
      }

      // Texto compacto
      ion-label {
        font-size: var(--font-caption);
        margin: 0;
      }
    }
  }
}

.modules-segment-view {
  // Ya no se usa - reemplazado por module-content-area-mobile
  display: none;
}

// Área de contenido del módulo seleccionado (enfoque simple con @if)
