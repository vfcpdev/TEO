// Settings Page Styles - Responsive Layout

// ==========================================
// ESCALA TIPOGRÁFICA ESTANDARIZADA
// ==========================================
// Móvil:
//   - Título Card: 14px
//   - Subtítulo (h3): 14px
//   - Labels controles: 12px
//   - Texto secundario: 11px
//   - Texto pequeño (captions): 10px
//   - Íconos grandes: 20px
//   - Íconos medianos: 18px
//   - Íconos pequeños: 16px
//
// Desktop:
//   - Título Card: 13px
//   - Subtítulo (h2): 16px
//   - Labels controles: 11px
//   - Texto secundario: 10px
//   - Texto pequeño: 9px
//   - Íconos: mismos que móvil
// ==========================================

// Custom properties for theming - Light mode (default)
:host {
  // Tipografía móvil
  --font-title: 14px;
  --font-subtitle: 14px;
  --font-label: 12px;
  --font-body: 11px;
  --font-caption: 10px;
  --font-micro: 9px;

  // Íconos
  --icon-lg: 20px;
  --icon-md: 18px;
  --icon-sm: 16px;

  // Fondos - Gris claro unificado
  --page-bg: #f8fafc;
  --card-bg: #ffffff;
  --item-bg: #ffffff;
  --module-item-bg: #ffffff;
  --module-item-hover-bg: #f1f5f9;
  --module-content-bg: #f1f5f9;

  // Texto
  --item-text: #1e293b;
  --item-text-secondary: #64748b;
  --module-item-text: #1e293b;

  // Bordes y separadores
  --item-border: #e2e8f0;
  --card-border: #e2e8f0;
  --module-item-border: #e2e8f0;
  --module-content-border: #e2e8f0;
  --separator-color: #e2e8f0;

  // Sombras
  --card-shadow: rgba(0, 0, 0, 0.05);
  --module-item-shadow: rgba(0, 0, 0, 0.05);

  // Toggle
  --toggle-track-bg: #cbd5e1;
  --toggle-track-bg-checked: var(--ion-color-primary);
  --toggle-handle-bg: #ffffff;
}

// Dark mode
:host-context(.dark) {
  // Fondos - Paleta Slate unificada
  --page-bg: #0f172a;
  --card-bg: #1e293b;
  --item-bg: #334155;
  --module-item-bg: #334155;
  --module-item-hover-bg: #475569;
  --module-content-bg: #1e293b;

  // Texto
  --item-text: #f1f5f9;
  --item-text-secondary: #94a3b8;
  --module-item-text: #f1f5f9;

  // Bordes y separadores - unificado
  --item-border: #475569;
  --card-border: #334155;
  --module-item-border: #475569;
  --module-content-border: #334155;
  --separator-color: #334155;

  // Sombras
  --card-shadow: rgba(0, 0, 0, 0.4);
  --module-item-shadow: rgba(0, 0, 0, 0.3);

  // Toggle
  --toggle-track-bg: #475569;
  --toggle-track-bg-checked: var(--ion-color-primary);
  --toggle-handle-bg: #ffffff;
}

// ==========================================
// DESKTOP LAYOUT - Nuevo diseño
// ==========================================
.desktop-layout {
  display: none; // Oculto por defecto en móvil

  @media (min-width: 992px) {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding: 24px;
    height: calc(100vh - 56px);
    max-width: 1400px;
    margin: 0 auto;
  }
}

.desktop-main-area {
  display: grid;
  grid-template-columns: 120px 1fr;
  gap: 20px;
  flex: 1;
  min-height: 0;
}

.desktop-modules-panel {
  display: flex;
  flex-direction: column;
  gap: 12px;

  .panel-header {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 12px;
    font-weight: 700;
    font-size: var(--font-title);
    color: var(--ion-text-color);

    ion-icon {
      font-size: var(--icon-lg);
    }
  }

  .modules-list {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
}

.module-item-desktop {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 12px 8px;
  border-radius: 12px;
  background: var(--module-item-bg);
  border: 2px solid transparent;
  cursor: pointer;
  transition: all 0.2s ease;
  text-decoration: none; // Para elementos <a>
  color: inherit;

  &:hover {
    background: var(--module-item-hover-bg);
    transform: translateY(-2px);
  }

  &.active {
    border-color: var(--ion-color-primary);
    background: var(--module-item-hover-bg);
  }

  &.unavailable {
    opacity: 0.6;
    cursor: default;

    &:hover {
      transform: none;
    }
  }

  .module-icon {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 6px;

    ion-icon {
      font-size: var(--icon-lg);
      color: white;
    }
  }

  span {
    font-size: var(--font-caption);
    font-weight: 600;
    color: var(--module-item-text);
    text-align: center;
  }
}

.desktop-right-panel {
  display: flex;
  flex-direction: column;
  gap: 20px;
  min-width: 0;
  height: 100%;
}

.module-content-area {
  background: var(--module-content-bg);
  border: 1px solid var(--module-content-border);
  border-radius: 16px;
  padding: 20px;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.module-content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
  padding-bottom: 12px;
  border-bottom: 1px solid var(--module-content-border);

  h2 {
    margin: 0;
    font-size: var(--font-subtitle);
    font-weight: 700;
    color: var(--ion-text-color);
  }

  ion-button {
    --border-radius: 8px;
    font-weight: 600;
    text-transform: none;
  }
}

.module-content-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
  padding: 0;
}

.placeholder-text {
  color: var(--item-text-secondary);
  font-size: var(--font-subtitle);
  font-style: italic;
  text-align: center;
  margin: auto;
}

// Loading container para módulos
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  gap: 12px;

  ion-spinner {
    width: 40px;
    height: 40px;
  }

  p {
    color: var(--item-text-secondary);
    font-size: 0.9rem;
  }
}

// Estado vacío para módulos
.empty-state-module {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  text-align: center;
  padding: 24px;

  ion-icon {
    font-size: 48px;
    color: var(--ion-color-medium);
    margin-bottom: 16px;
  }

  h3 {
    margin: 0 0 8px;
    font-size: 1.1rem;
    color: var(--item-text-primary);
  }

  p {
    margin: 0 0 16px;
    color: var(--item-text-secondary);
    font-size: 0.9rem;
  }
}

// Lista de lugares (legacy - se mantiene por compatibilidad)
.places-list {
  display: flex;
  flex-direction: column;
  gap: 8px;
  padding: 8px;
  flex: 1;
  overflow-y: auto;
}

// ============================================
// LAYOUT DESKTOP: Lista + Detalle lado a lado
// ============================================
.places-desktop-layout {
  display: flex;
  gap: 16px;
  height: 100%;
  min-height: 300px;
}

// Lista compacta de lugares
.places-list-compact {
  width: 280px;
  min-width: 240px;
  max-width: 320px;
  display: flex;
  flex-direction: column;
  gap: 4px;
  padding: 8px;
  background: var(--module-content-bg);
  border-radius: 8px;
  border: 1px solid var(--item-border);
  overflow-y: auto;
  max-height: 400px;

  .place-item-compact {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 8px 10px;
    background: var(--card-bg);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.15s ease;
    border: 1px solid transparent;

    &:hover {
      background: var(--module-item-hover-bg);
    }

    &.selected {
      background: rgba(var(--ion-color-primary-rgb), 0.1);
      border-color: var(--ion-color-primary);
    }

    .place-item-icon {
      width: 28px;
      height: 28px;
      border-radius: 6px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;

      ion-icon {
        font-size: 14px;
        color: white;
      }

      &.type-W {
        background: var(--ion-color-tertiary);
      }

      &.type-P {
        background: var(--ion-color-success);
      }
    }

    .place-item-info {
      flex: 1;
      min-width: 0;
      display: flex;
      flex-direction: column;
      gap: 2px;

      .place-item-name {
        font-size: 0.8rem;
        font-weight: 500;
        color: var(--item-text);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .place-item-type {
        font-size: 0.65rem;
        color: var(--item-text-secondary);
        text-transform: uppercase;
      }
    }

    .place-item-gps {
      font-size: 14px;
      flex-shrink: 0;
    }
  }
}

// Panel de detalle
.place-detail-panel {
  flex: 1;
  background: var(--card-bg);
  border-radius: 8px;
  border: 1px solid var(--item-border);
  overflow: hidden;
  min-width: 300px;

  .place-detail-content {
    padding: 20px;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .place-detail-header {
    display: flex;
    align-items: center;
    gap: 16px;
    padding-bottom: 16px;
    border-bottom: 1px solid var(--item-border);
    margin-bottom: 16px;

    .place-detail-icon {
      width: 48px;
      height: 48px;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      flex-shrink: 0;

      ion-icon {
        font-size: 24px;
        color: white;
      }

      &.type-W {
        background: var(--ion-color-tertiary);
      }

      &.type-P {
        background: var(--ion-color-success);
      }
    }

    .place-detail-title {
      flex: 1;

      h3 {
        margin: 0 0 6px;
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--item-text);
      }

      .place-type-badge {
        display: inline-block;
        padding: 3px 10px;
        border-radius: 4px;
        font-size: 0.7rem;
        font-weight: 500;
        text-transform: uppercase;

        &.badge-W {
          background: rgba(var(--ion-color-tertiary-rgb), 0.15);
          color: var(--ion-color-tertiary);
        }

        &.badge-P {
          background: rgba(var(--ion-color-success-rgb), 0.15);
          color: var(--ion-color-success);
        }
      }
    }
  }

  .place-detail-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 12px;

    .detail-row {
      display: flex;
      align-items: flex-start;
      gap: 12px;

      > ion-icon {
        font-size: 18px;
        color: var(--ion-color-primary);
        margin-top: 2px;
        flex-shrink: 0;
      }

      .detail-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 2px;

        label {
          font-size: 0.7rem;
          color: var(--item-text-secondary);
          text-transform: uppercase;
          font-weight: 500;
        }

        .detail-value {
          font-size: 0.85rem;
          color: var(--item-text);

          &.coordinates {
            font-family: monospace;
            font-size: 0.8rem;
          }

          &.no-data {
            color: var(--item-text-secondary);
            font-style: italic;
          }
        }
      }
    }
  }

  .place-detail-actions {
    display: flex;
    gap: 12px;
    padding-top: 16px;
    border-top: 1px solid var(--item-border);
    margin-top: auto;

    ion-button {
      flex: 1;
      --border-radius: 8px;
    }
  }

  .place-detail-empty {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: var(--item-text-secondary);
    padding: 40px;
    text-align: center;

    ion-icon {
      font-size: 48px;
      margin-bottom: 16px;
      opacity: 0.5;
    }

    p {
      margin: 0;
      font-size: 0.85rem;
    }
  }
}

.place-card {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 16px;
  background: var(--card-bg);
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.2s ease;
  border: 1px solid var(--item-border);

  &:hover {
    background: var(--ion-color-light);
    transform: translateX(4px);
  }

  .place-icon {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;

    ion-icon {
      font-size: 20px;
      color: white;
    }

    &.type-W {
      background: var(--ion-color-tertiary);
    }

    &.type-P {
      background: var(--ion-color-success);
    }
  }

  .place-info {
    flex: 1;
    min-width: 0;

    h4 {
      margin: 0 0 4px;
      font-size: 0.95rem;
      font-weight: 600;
      color: var(--item-text-primary);
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .place-type-badge {
      display: inline-block;
      padding: 2px 8px;
      border-radius: 4px;
      font-size: 0.7rem;
      font-weight: 500;
      text-transform: uppercase;

      &.badge-W {
        background: rgba(var(--ion-color-tertiary-rgb), 0.15);
        color: var(--ion-color-tertiary);
      }

      &.badge-P {
        background: rgba(var(--ion-color-success-rgb), 0.15);
        color: var(--ion-color-success);
      }
    }
  }

  .chevron-icon {
    color: var(--ion-color-medium);
    font-size: 18px;
    flex-shrink: 0;
  }
}

.view-all-link {
  display: flex;
  justify-content: center;
  padding: 8px;
  border-top: 1px solid var(--item-border);
  margin-top: auto;
}

// ============ ESTILOS DE CURSOS ============

.course-form-container {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow-y: auto;
  background: var(--module-content-bg);
  padding: 16px;

  form {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .form-row {
    display: flex;
    gap: 12px;

    .form-section-half {
      flex: 1;
    }
  }

  .place-select-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 8px;

    .place-option {
      display: flex;
      align-items: center;
      gap: 8px;
      padding: 10px 12px;
      border: 2px solid var(--item-border);
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.2s ease;
      background: var(--card-bg);

      ion-icon {
        font-size: 18px;
      }

      span {
        font-size: 0.85rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      &:hover {
        border-color: var(--ion-color-primary);
        background: rgba(var(--ion-color-primary-rgb), 0.05);
      }

      &.selected {
        border-color: var(--ion-color-primary);
        background: rgba(var(--ion-color-primary-rgb), 0.1);

        span {
          font-weight: 600;
        }
      }
    }
  }

  .no-places-warning {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 12px;
    background: rgba(var(--ion-color-warning-rgb), 0.1);
    border-radius: 8px;
    color: var(--ion-color-warning-shade);

    ion-icon {
      font-size: 20px;
    }

    span {
      font-size: 0.85rem;
    }
  }

  .weekdays-grid {
    display: flex;
    gap: 6px;
    flex-wrap: wrap;

    .weekday-chip {
      padding: 8px 14px;
      border-radius: 20px;
      border: 2px solid var(--item-border);
      cursor: pointer;
      transition: all 0.2s ease;
      font-size: 0.8rem;
      font-weight: 500;
      background: var(--card-bg);

      &:hover {
        border-color: var(--ion-color-primary);
      }

      &.selected {
        border-color: var(--ion-color-primary);
        background: var(--ion-color-primary);
        color: white;
      }
    }
  }
}

.courses-desktop-layout {
  display: grid;
  grid-template-columns: 1fr 1.2fr;
  gap: 16px;
  height: 100%;
  overflow: hidden;
}

.courses-list-compact {
  display: flex;
  flex-direction: column;
  gap: 4px;
  overflow-y: auto;
  padding-right: 4px;

  .loading-container,
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 150px;
    color: var(--item-text-secondary);

    ion-icon {
      font-size: 32px;
      margin-bottom: 8px;
      opacity: 0.5;
    }

    p {
      margin: 0;
      font-size: 0.85rem;
    }

    small {
      font-size: 0.75rem;
      margin-top: 4px;
      opacity: 0.7;
    }
  }

  .course-item-compact {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 10px 12px;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.15s ease;
    background: var(--card-bg);
    border: 1px solid transparent;

    &:hover {
      background: rgba(var(--ion-color-primary-rgb), 0.05);
    }

    &.selected {
      border-color: var(--ion-color-primary);
      background: rgba(var(--ion-color-primary-rgb), 0.08);
    }

    .course-item-icon {
      width: 36px;
      height: 36px;
      border-radius: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: rgba(var(--ion-color-primary-rgb), 0.1);
      flex-shrink: 0;

      ion-icon {
        font-size: 18px;
      }
    }

    .course-item-info {
      flex: 1;
      min-width: 0;
      display: flex;
      flex-direction: column;
      gap: 2px;

      .course-name {
        font-weight: 500;
        font-size: 0.9rem;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      .course-code {
        font-size: 0.75rem;
        color: var(--item-text-secondary);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    }

    .course-item-actions {
      display: flex;
      gap: 0;
      opacity: 0;
      transition: opacity 0.15s ease;

      ion-button {
        --padding-start: 6px;
        --padding-end: 6px;
        height: 28px;
      }
    }

    &:hover .course-item-actions {
      opacity: 1;
    }
  }
}

.course-detail-panel {
  background: var(--card-bg);
  border-radius: 12px;
  border: 1px solid var(--item-border);
  overflow: hidden;
  display: flex;
  flex-direction: column;

  .course-detail-content {
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 16px;
    height: 100%;
  }

  .course-detail-header {
    display: flex;
    align-items: center;
    gap: 14px;
    padding-bottom: 16px;
    border-bottom: 1px solid var(--item-border);

    .course-detail-icon {
      width: 50px;
      height: 50px;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;

      ion-icon {
        font-size: 24px;
        color: white;
      }

      &.presencial {
        background: var(--ion-color-primary);
      }

      &.virtual {
        background: var(--ion-color-tertiary);
      }
    }

    .course-detail-title {
      flex: 1;

      h3 {
        margin: 0 0 4px 0;
        font-size: 1.1rem;
        font-weight: 600;
      }

      .course-code-badge {
        display: inline-block;
        padding: 2px 8px;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 500;
        background: rgba(var(--ion-color-primary-rgb), 0.1);
        color: var(--ion-color-primary);
      }
    }
  }

  .course-detail-info {
    display: flex;
    flex-direction: column;
    gap: 12px;

    .detail-row {
      display: flex;
      align-items: flex-start;
      gap: 12px;

      > ion-icon {
        font-size: 18px;
        color: var(--ion-color-medium);
        margin-top: 2px;
      }

      .detail-content {
        flex: 1;

        label {
          display: block;
          font-size: 0.7rem;
          text-transform: uppercase;
          letter-spacing: 0.5px;
          color: var(--item-text-secondary);
          margin-bottom: 2px;
        }

        .detail-value {
          font-size: 0.9rem;
          font-weight: 500;

          &.link {
            color: var(--ion-color-primary);
            text-decoration: none;

            &:hover {
              text-decoration: underline;
            }
          }
        }
      }
    }
  }

  .course-detail-actions {
    display: flex;
    gap: 12px;
    margin-top: auto;
    padding-top: 16px;
    border-top: 1px solid var(--item-border);

    ion-button {
      flex: 1;
      --border-radius: 8px;
    }
  }

  .course-detail-empty {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: var(--item-text-secondary);
    padding: 40px;
    text-align: center;

    ion-icon {
      font-size: 48px;
      margin-bottom: 16px;
      opacity: 0.5;
    }

    p {
      margin: 0;
