  flex-shrink: 0;
  --border-radius: 10px;
  font-weight: 600;
  font-size: var(--font-label);
  text-transform: none;
  --padding-top: 10px;
  --padding-bottom: 10px;

  ion-icon {
    margin-right: 6px;
    font-size: var(--icon-md);
  }

  // Landscape
  @media (min-width: 568px) and (max-height: 500px) and (orientation: landscape) {
    --padding-top: 8px;
    --padding-bottom: 8px;
    font-size: var(--font-body);

    ion-icon {
      font-size: var(--icon-sm);
    }
  }

  // Ocultar en desktop
  @media (min-width: 992px) {
    display: none;
  }
}
